<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/favicon.ico">
    <title>Desilearn</title>
    <link href="public/css/bootstrap.css" rel="stylesheet">
    <link href="public/css/style.css" rel="stylesheet">
</head>
<body>
	<%- include('blocks/header'); %>
	<div class="user-info">
		<div class="container">
			<div class="row">
				<div class="col-lg-5 col-md-5 photo-user">
					<div class="back-block"></div>
  					<div class="user-block">
  						<picture>
  							<img src="public/img/teacher1.png" alt="">
  						</picture>
  					</div>
  					<h2 id="userName"></h2>
  				</div>

  				<div class="col-lg-7 col-md-12">
  					<div class="user-date">
  						<label for="#">Логін</label>
						<input class="user-data-input" type="text" id = "log"    readonly>
						<label for="#">Телефон</label>
						<input class="user-data-input" type="text" id = "phone"  readonly>
						<label for="#">Пошта</label>
						<input class="user-data-input" type="email" id = "mail"  readonly>
						<label for="#">Пароль</label>
						<input class="user-data-input" type="pasword" id = "pass" >	
  					</div>
  					<div class="user-history">
  						<h1>Історія бронювань</h1>
              <div class="display">
                  <% data.forEach(function(dat) { %>
                    <div class="history-block"><p class="courseTitle"><%= dat.title%></p><p class="courseStatus"><%= dat.status%></p></div>
                  <% }); %>
              </div>
  				</div>
			</div>
		</div>
	</div>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="public/js/userProfile.js" type="text/javascript"></script>
	<script>
		"use strick"

$('#userName')[0].textContent = localStorage.name;
$('#log')[0].value = localStorage.log;
$('#phone')[0].value = localStorage.phone;
$('#mail')[0].value = localStorage.mail;
$('#pass')[0].value = localStorage.pass;
$("#headUser")[0].textContent = localStorage.log;
$('#userId')[0].value = localStorage.id;


	</script>
</body>
</html>